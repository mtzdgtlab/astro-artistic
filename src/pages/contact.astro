---
import '../styles/style.css';
import NavbarDos from '../components/1-NavbarDos.astro';
import CtaFinal from '../components/7-CtaFinal.astro';
import Footer from '../components/8-Footer.astro';
import Scripts from '../components/9-Scripts.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Artistic Embroidery Services</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/animate.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/magnific-popup.min.css" />
    <link rel="stylesheet" href="/assets/css/nice-select.min.css" />
    <link rel="stylesheet" href="/assets/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="/assets/css/flaticon.min.css" />
    <link rel="stylesheet" href="/assets/css/slick.min.css" />
  </head>
  <body>
    <!-- preloader area start -->
    <div class="preloader" id="preloader"></div>
    <!-- preloader area end -->
    <div class="page-wrapper">
      <!-- Back to Top -->
      <div class="back-to-top">
        <span class="back-top"><i class="fa fa-angle-up"></i></span>
      </div>

      <NavbarDos />
      <!-- Page Banner Start -->
      <section
        class="page-banner bgs-cover text-white pt-65 pb-75"
        style={`background-image: url('/assets/images/banner.jpg');`}
      >
        <div class="container">
            <div class="banner-inner">
                <h2 class="page-title wow fadeInUp delay-0-2s">Contact Us</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb wow fadeInUp delay-0-4s">
                        <li class="breadcrumb-item"><a href="home.html">Home</a></li>
                        <li class="breadcrumb-item active">Contact</li>
                    </ol>
                </nav>
            </div>
        </div>
      </section>
      <!-- Page Banner End -->
     

      <!-- Contact Feature Area start -->
      <section class="contact-feature pt-80 pb-50">
        <div class="container">
          <div class="row">
            <div class="col-lg-6">
              <div class="service-item-two justify-content-center style-two wow fadeInUp delay-0-2s">
                <div class="icon bgc-lighter-two">
                  <i class="far fa-clock"></i>
                </div>
                <div class="content">
                  <h4>Business Hours</h4>
                  <p>Mon - Fri: 10:00 - 20:00 hrs</p>
                  <p>Sat: 09:00 - 15:00 hrs</p>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="service-item-two justify-content-center style-two wow fadeInUp delay-0-2s">
                <div class="icon bgc-lighter-two">
                  <i class="fab fa-whatsapp"></i>
                </div>
                <div class="content">
                  <h4>Chat on WhatsApp</h4>
                  <p>
                    <a href="https://wa.me/18622764283" target="_blank" rel="noopener noreferrer">
                      +1 (862) 276-4283
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Contact Feature Area end -->

      <!-- Contact Info Area start -->
      <section class="contact-info-area mb-80">
        <div class="container">
          <div class="row no-gap">
            <div class="col-lg-6">
              <div class="contact-info-content justify-content-center style-two wow fadeInLeft delay-0-2s">
                <div class="section-title text-center mb-25">
                  <h2>We're ready to help!</h2>
                  <p>Feel free to Contact</p>
                  <img src="/assets/images/about/about-two.png" alt="Contact Help Image" class="contact-image" />
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="contact-info-wrap justify-content-center style-two wow fadeInRight delay-0-2s">
                <div class="contact-info-item justify-content-center style-two">
                  <a
                    href="https://www.google.com/maps/dir/?api=1&destination=5+Elizabeth+St,+Paterson,+NJ+07503"
                    target="_blank"
                    class="icon bgc-lighter-two"
                  >
                    <i class="fas fa-map-marker-alt"></i>
                  </a>
                  <div class="content">
                    <h4>Location</h4>
                    <a
                      href="https://www.google.com/maps/dir/?api=1&destination=5+Elizabeth+St,+Paterson,+NJ+07503"
                      target="_blank"
                      >5 Elizabeth St, Paterson
                    </a>
                    <p>NJ 07503</p>
                  </div>
                </div>

                <div class="contact-info-item justify-content-center style-two">
                  <a href="mailto:art4logo20@gmail.com" class="icon bgc-lighter-two">
                    <i class="fas fa-envelope"></i>
                  </a>
                  <div class="content">
                    <h4>Email Us</h4>
                    <a href="mailto:art4logo20@gmail.com">art4logo20@gmail.com</a>
                  </div>
                </div>

                <div class="contact-info-item justify-content-center style-two">
                  <a href="tel:+18622764283" class="icon bgc-lighter-two">
                    <i class="fas fa-phone"></i>
                  </a>
                  <div class="content">
                    <h4>Phone & WhatsApp</h4>
                    <a href="tel:+18622764283">(862) 276-4283</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Contact Info Area end -->

      <!-- Location Map Area Start -->
      <div class="contact-page-map wow fadeInUp delay-0-2s">
        <div class="our-location">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.0660627442463!2d-74.163471!3d40.8994244!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2fc29ddb33e77%3A0x8c944c06a25f76e2!2s5%20Elizabeth%20St%2C%20Paterson%2C%20NJ%2007503%2C%20USA!5e0!3m2!1ses!2sus!4v1747736970126!5m2!1ses!2sus"
            style="border:0; width: 100%; height: 450px;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          >
          </iframe>
        </div>
      </div>
      <!-- Location Map Area End -->

      <!-- Contact Form Start -->
      <section class="contact-form-area mt-110 mb-130 wow fadeInUp delay-0-2s">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
              <span class="text-center sub-title mb-30">Contact Us</span>
              <form
                id="contactForm"
                class="contact-form z-1 rel"
                action="assets/php/form-process.php"
                name="contactForm"
                method="post"
              >
                <div class="block-title text-center mb-0">
                  <h2 class="section-title mb-30">Get in Touch</h2>
                </div>
                <div class="row mt-25">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="name"><i class="fas fa-user"></i></label>
                      <input
                        type="text"
                        id="name"
                        name="name"
                        class="form-control"
                        placeholder="Full Name"
                        required
                        data-error="Please enter your name"
                      />
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="email"><i class="fas fa-envelope"></i></label>
                      <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Email Address"
                        required
                        data-error="Please enter your email"
                      />
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="phone"><i class="fas fa-phone-alt"></i></label>
                      <input type="text" id="phone" name="phone" class="form-control" placeholder="Phone Number" />
                    </div>
                  </div>
                  <div class="col-sm-6 mb-30">
                    <div class="form-group">
                      <label for="subject"><i class="fas fa-question"></i></label>
                      <select id="subject" name="subject" class="form-control">
                        <option value="default" selected>Subject :</option>
                        <option value="product">Embroidery</option>
                        <option value="printing">Screen Printing</option>
                        <option value="design">Printing Service</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <div class="form-group">
                      <label for="message"><i class="fas fa-pencil-alt"></i></label>
                      <textarea
                        name="message"
                        id="message"
                        class="form-control"
                        rows="4"
                        placeholder="Write your Message"
                        required
                        data-error="Please enter your Message"></textarea>
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <div class="tac-wrap mb-30">
                      <input type="checkbox" id="tac" name="tac" value="tac" />
                      <label for="tac">I agree that my data is collected and stored.</label>
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <div class="form-group mb-0">
                      <button type="submit" class="theme-btn style-two">
                        Send Message <i class="fas fa-arrow-right"></i>
                      </button>
                      <div id="msgSubmit" class="hidden"></div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
      <!-- Contact Form End -->
      <CtaFinal />
      <Footer />
      <Scripts />
    </div>
  </body>
</html>
