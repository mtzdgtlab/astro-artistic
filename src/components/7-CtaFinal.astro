---
import { Image } from 'astro:assets';
import ctaLeft from '../assets/images/cta/cta-left.png';
import ctaRight from '../assets/images/cta/cta-right.png'; 
---

<!-- CTA Area start -->
<section class="cta-area bgc-black">
  <div class="container-1350 mb-50">
    <div class="row justify-content-center align-items-center">
      <div class="col-12 col-xl-4 order-2 order-xl-1">
        <div class="cta-left-image mt-50 rel z-1 wow fadeInLeft delay-0-4s">
          <Image 
          src={ctaLeft} 
          alt="CTA Left" 
          loading="lazy" 
          width={612} 
          height={416}
          class="w-full h-auto"
        />
          <div class="circle-square circle-blue ">
            <div class="absolute w-3/4 aspect-square inset-0 m-auto z-[-1]">
            <div class="shape-inner ">
              <span class="dot-one"></span>
              <span class="dot-two"></span>
              <span class="dot-three"></span>
              <span class="dot-four"></span>
              <span class="dot-five"></span>
            </div>
          </div>
        </div>
        </div>
      </div>

      <div class="col-12 col-xl-4 order-1 order-xl-2 text-center">
        <div class="cta-content text-center py-55 wow fadeInUp delay-0-2s">
          <span class="sub-title-two mb-25">Let's Create Something Unique</span>
          <div class="section-title text-white-title mb-50">
            <h2>Custom Embroidery <br /> Tailored to Your Brand</h2>
          </div>
          <h3 class="visually-hidden">Embroidery quote section</h3>
          <a href="tel:+18622764283" target="_blank" rel="noopener" class="theme-btn" aria-label="Request a custom embroidery quote via WhatsApp">
            Request a Quote <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>

      <div class="col-12 col-xl-4 d-none d-xl-block order-3">
        <div class="cta-right-image rel z-1 wow fadeInLeft delay-0-4s">
          <Image 
            src={ctaRight} 
            alt="CTA Right" 
            loading="lazy" 
            width={590} 
            height={483}
            class="w-full h-auto"
          />
          <div class="circle-square circle-yellow">
            <div class="absolute w-3/4 aspect-square inset-0 m-auto z-[-1]">
            <div class="shape-inner">
              <span class="dot-one"></span>
              <span class="dot-two"></span>
              <span class="dot-three"></span>
              <span class="dot-four"></span>
              <span class="dot-five"></span>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
  <!-- CTA Area end -->
</section>
